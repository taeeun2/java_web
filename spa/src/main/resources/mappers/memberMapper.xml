<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.example.spa.mapper.MemberMapper">
     <select id="getName" resultType="java.lang.String" >
		select NAME from shopingmall.member where id = #{email}
    </select>
    <select id="getMember" resultType="com.example.spa.domain.Member" >
		select * from shopingmall.member where id = #{email}
    </select>
    <insert id ="createMember" parameterType="java.util.HashMap">
    	INSERT INTO shopingmall.member(ID,PWD,EMAIL,NAME,INDATE) 
		VALUES(#{id}, #{pwd}, #{email},#{name}, NOW())
    </insert>
    
</mapper>


