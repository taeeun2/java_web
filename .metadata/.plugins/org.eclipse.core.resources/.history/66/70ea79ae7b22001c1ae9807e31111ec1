package controller;

import java.util.Map;

import javax.servlet.http.HttpSession;

import dto.Member_ex;
import memberex.MemberDAO;

public class LoginController implements Controller{

	MemberDAO memberDao;
	
	public LoginController setMemberDao(MemberDAO memberDao) {
		this.memberDao = memberDao;
		return this;
	}
	
	@Override
	public String execute(Map<String,Object> model) throws Exception{
		Member_ex loginInfo = (Member_ex)model.get("loginInfo");
		if(loginInfo==null) {
			return "/lecture/auth/LoginForm.jsp";
		}
		Member_ex member = memberDao.exist(loginInfo.getEmail(), loginInfo.getPassword());
		if(member!=null) {
			HttpSession session = (HttpSession)model.get("session");
			session.setAttribute("member", member);
			return "redirect:../lecture/member/list.do";
		}else {
			return "/lecture/auth/LoginFail.jsp";
		}
	}
}
